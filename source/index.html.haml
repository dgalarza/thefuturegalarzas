      %a{ href: 'https://www.bedbathandbeyond.com/store/giftregistry/view_registry_guest.jsp?registryId=10701864&eventType=Wedding', title: "Bed Bath &amp; Beyond", target: '_blank' }
        %img{ src: '/images/bbandb.png', alt: 'Bed Bath &amp; Beyond' }

